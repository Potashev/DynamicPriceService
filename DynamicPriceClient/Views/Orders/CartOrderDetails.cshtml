@model DynamicPriceCore.Models.Order

@{
	ViewData["Title"] = "Cart";
}

<h1>Products cart</h1>

<p>
	<a asp-action="ConfirmOrder" asp-route-id="@Model?.OrderId" class="btn btn-primary">Confirm order</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Product.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Product.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Quantity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Price)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.OrderProducts)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Product.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Product.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Quantity)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
@* 					<a asp-action="Edit" asp-route-id="@item.Product?.ProductId">Add</a> |
					<a asp-action="Details" asp-route-id="@item.Product.ProductId">Remove</a> | *@
				</td>
			</tr>
		}
	</tbody>
</table>